                </th>

            </tr>


        }
    </table>
    @using (Html.BeginForm("EditOption", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="submit" value="Save" class="btn btn-default" />
    }
</div>

