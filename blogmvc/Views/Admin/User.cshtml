            </th>
        </tr>


        @foreach (var item in Model)
        {

            <tr>

                <th>

                    @Html.DisplayFor(modelItem => item.OptionName)

                </th>
                <th>
                    @Html.TextBoxFor(modelItem => item.OptionValue)
